---
import type { CollectionEntry } from "astro:content";

//components
import Heading from "./ui/Heading.astro";
import Link from "./ui/Link.astro";

type Props = {
  p: CollectionEntry<"projects">;
  tagName: "h2" | "h3";
};

const { p } = Astro.props;
const { href, image, title } = p.data;
---

<article aria-label={title} class="project-card">
  <img src={image.src} width="400" height="225" alt="" />
  <div class="rows">
    <Heading tagName="h2" tagSize="h3">{title}</Heading>
    <Link href={href} variant="secondary">View Project</Link>
  </div>
</article>
