---
import Link from "../ui/Link.astro";

type Props = {
  prev?: string;
  next?: string;
};
const { prev, next } = Astro.props;
---

<div class="pagination">
  {
    prev && (
      <Link variant="secondary" href={prev}>
        &lArr; Previous
      </Link>
    )
  }
  {
    next && (
      <Link variant="secondary" href={next}>
        Next &rArr;
      </Link>
    )
  }
</div>
