---
import Heading from "../ui/Heading.astro";
import katie from "@/assets/avatar.jpeg";

type Props = {
  page: number | string;
};

const { page } = Astro.props;
---

<section aria-label="Hero Section" class="blog-hero container">
  <img src={katie.src} alt="Katie Haus" />
  <div>
    <Heading tagName="h1" tagSize="h2">
      My Blog <span>Page {page.toString()}</span>
    </Heading>
    <p>
      I like to write about web development, design, productivity, and working
      with clients. Get a sense of what it's like to work with me and understand
      my process.
    </p>
  </div>
</section>
